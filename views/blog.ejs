<!DOCTYPE html>
<html lang="en">
  <head>
   <%- include('./partials/head') %>
    <title>Home</title>
  </head>
  <body>

    <%- include('./partials/nav') %>


   <div class="container mt-4">
     <h1><%= blog.title %></h1>
<div class="mt-3">
    <img src='<%=blog.coverImageUrl %>' width="600px" class="mb-3" alt="<%= blog.title %>">
 <p><%= blog.content %></p>

</div>
<div class="conatiner mt-3">
    <img src="<%= blog.createdBy.profileImageUrl%>" width="40px" alt="User Image" class="rounded-circle">
    <span class="ms-2 fw-bold"><%= blog.createdBy.fullName %></span>

</div>
   </div>

   <div class="container mt-3">
        <h2>Comments (<%= comments.length %>)</h2>
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3 mt-0">
            <label for="content" class="form-label"></label>
           <input type="text" class="form-control" name="content" id="content" placeholder="Add a comment...">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    
       
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
                <img src="<%= comment.createdBy.profileImageUrl%>" width="40px" alt="User Image" class="rounded-circle">
                <span class="ms-2"><%= comment.createdBy.fullName %></span>
                <p><%= comment.content %></p>

            </div>
            <% }) %>

        </div>
       
   </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
